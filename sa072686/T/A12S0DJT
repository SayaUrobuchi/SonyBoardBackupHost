#include<stdio.h>
#include<stdlib.h>
int cycle_length(int n)
{
int length=1;
    do
{
    if(n%2==1)n=3*n+1;
    if(n%2==0)n=n/2;
        length++;
}
while(n!=1);
return length;
}


int main()
{
int i,j,oi,oj,max=0,n,k;
    scanf("%d %d",&oi,&oj);
    if(oj<oi)
    {
       j=oi;
       i=oj;
    }
    else
    {
       i=oi;
       j=oj;
    }
    for(k=i;k<=j;k++)
    {
    n=cycle_length(k);
    if(n>max)max=n;
    }
    printf("%d %d %d\n",oi,oj,max);
    system("pause");
    return 0;
}

