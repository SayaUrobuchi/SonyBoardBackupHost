#include <iostream>

using namespace std;

int c[101][101];
int b[101];

int main() {
  int n,x,s,f;
  while(1) {
    cin >> n;
    if(!n) break;

    for( int i=1; i<=n; i++ ) {
      for( int j=1; j<=n; j++ ) {
        c[i][j] = 0;
      }
    }

    for( int i=1; i<=n; i++ ) {
      cin >> b[i];
      for( int j=0; j<b[i]; j++ ) {
        cin >> x;
        c[x][i] = 1;
      }
    }

    for( int i=0; i<n; i++ ) {
      for( int j=n; j>0; j-- ) {
        if(!b[j]) {
          f = j;
          break;
        }
      }
      b[f] = 1;
      for( int j=1; j<=n; j++ ) {
        if(c[f][j]) b[j]--;
      }
    }

    cout << f << endl;
  }
  return 0;
}



