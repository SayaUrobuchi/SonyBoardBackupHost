//w[x][y],b[x][y] ªí¥Ü¶Â¦â/¥Õ¦â¤¤, x*x ªº´Ñ½L©ñ y ­Ó bishop ªº¤èªk¼Æ
//¥ª¤W¨¤¶îªº¬O¥Õ¦â,¬Û¶¡¶î¶Â¥Õ¨â¦â¶i¥h,¶Â¥Õ¤£·|¤¬¬Û§ðÀ»,¬G¤À¶}³B²z

#include <stdio.h>
int main(){
    int n,k,i,j,m;
    long long w[31][31],b[31][31],Bishops;
    w[1][0]=w[1][1]=1;
    for(i=2;i<=30;i++){     //´Ñ½LªºÃäªø
        w[i][0]=1;  //³oÀ³¸Ó¤£¥Î¸ÑÄÀ
        w[i][1]=w[i-1][1]+(i-(1-i%2)); //¦h¥X¤F¤@±ø¥i¥H©ñªº¦a¤è
                                         ¥i¥H¦h©ñi-(1-i%2)­Ó
                                         i¬O°¸¼Æ®É­n´î1

        for(j=2;j<=i;j++){   //¥D±Ð¼Æ,i*i ªº´Ñ½L³Ì¦h¥u¯à©ñ i ­Ó¥D±Ð
            if(j>i-1) w[i-1][j]=0;
            w[i][j]=w[i-1][j]+w[i-1][j-1]*(i-(1-i%2)-(j-1));
            //j>i-1®É¡Aw[i-1][j]®Ú¥»¤£·|³Q³B²z¡A©Ò¥H¹w³]­È³]¬°0
            //§Ú©Ó»{¤U¤@¦æ§ÚÁÙ¦A¬ã¨s¡@
        }
    }
    b[1][0]=1;
    b[1][1]=0;
    for(i=2;i<=30;i++){
        b[i][0]=1;
        b[i][1]=b[i-1][1]+(i-i%2);
        for(j=2;j<=i;j++){
            if(j>i-1) b[i-1][j]=0;
            b[i][j]=b[i-1][j]+b[i-1][j-1]*((i-i%2)-(j-1));
        }
    }

    while(scanf("%d %d",&n,&k)==2){
        if(n==0 && k==0) break;
        Bishops=0;
        for(i=0;i<=k;i++){
            if(i>n || k-i>n) continue;
            Bishops+=(w[n][i]*b[n][k-i]); //³o¸ÌÀ³¸Ó¤£¥Î¸ÑÄÀ§a
        }
        printf("%lld\n",Bishops);
    }
    return 0;
}


