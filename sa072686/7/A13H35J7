/*-----------------------¤K¬Ó¦Z°ÝÃD-------------------------*/
#include<iostream>
#include<math.h>
using namespace std;
int s[92][8][2]={0},c=0;//c¬°²Ä´XºØ¸Ñªk,s¬°¦s¸Ñªkªº¦a¤è
void dfs(int depth)
{
    if(depth<8)
    {
        int x,y,i;
        for(x=1;x<=8;x++)
        for(y=1;y<=8;y++)
        {
            //ÀË¬d½X
            bool r=1;
            for(i=0;i<depth;i++)
            {
                if(x==s[c][i][0]||y==s[c][i][1]||abs(s[c][i][0]-x)==abs(s[c][i][1]-y))r=0;//°£¿ùµ{¦¡»¡³o¦æ¦³¿ù
                //¬°¦s¨ú¿ù»~
            }
            if(r)
            {
                for(int j=c;j<92;j++){s[j][depth][0]=x;s[j][depth][1]=y;}
                dfs(depth+1);
            }
        }
    }
    else c++;
}

int main()
{

    dfs(0);
    cout<<"x y\n";
    for(c;c>=0;c--)
    {
        cout<<c<<"\n";
        for(int i=0;i<8;i++)cout<<s[c][i][0]<<" "<<s[c][i][1]<<"\n";
    }
    system("pause");
    return 0;
}
