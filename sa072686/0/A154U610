#include <cstdio>

void proc(int& dx, int& dy) {
    int a=dx, b=dy, r;
    while (b) {
        r = a%b;
        a = b;
        b = r;
    }
    dx /= a;
    dy /= a;
    if (dx<0) {
        dx = -dx;
        dy = -dy;
    }
}

int main() {
    int n, x1, y1, x2, y2, x3, y3, x4, y4;
    int i, j, a1, b1, c1, a2, b2, c2;
    double px, py, d;
    scanf("%d", &n);
    puts("INTERSECTING LINES OUTPUT");
    while (n--) {
        scanf("%d%d%d%d%d%d%d%d"
            , &x1, &y1, &x2, &y2
            , &x3, &y3, &x4, &y4
        );

        a1 = y2 - y1;
        b1 = x1 - x2;
        proc(a1, b1);
        c1 = a1*x1 + b1*y1;

        a2 = y4 - y3;
        b2 = x3 - x4;
        proc(a2, b2);
        c2 = a2*x3 + b2*y3;

        if (a1==a2 && b1==b2) {
            puts(c1==c2 ? "LINE" : "NONE");
        } else {
            d = a1*b2 - a2*b1;
            px = (c1*b2 - c2*b1) / d;
            py = (c1*a2 - c2*a1) / (-d);
            printf("POINT %.2lf %.2lf\n", px, py);
        }
    }
    puts("END OF OUTPUT");
    return 0;
}

